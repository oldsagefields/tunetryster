<h1>Your Tune List</h1>

<table class="table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Source</th>
      <th>Key</th>
      <th>Tuning</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tunes.each do |tune| %>
      <tr>
        <td width="200px"><%= tune.name %></td>
        <td width="150"><%= tune.source %></td>
        <td width="50px"><%= tune.key %></td>
        <td><%= tune.tuning %></td>
        <td><%= link_to 'Show', tune, class: "btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_tune_path(tune), class: "btn btn-link" %></td>
        <td><%= link_to 'Destroy', tune, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tune', new_tune_path, class: "btn btn-success" %>
